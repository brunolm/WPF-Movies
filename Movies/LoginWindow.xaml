<Window x:Class="Movies.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="242" Width="300" Loaded="Window_Loaded" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,25,0,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="38,83,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="38,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="pt-br" Text="Password"/></TextBlock>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="99,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Name="txtUsername" TabIndex="0" />
        <TextBox HorizontalAlignment="Left" Height="23" Margin="99,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Name="txtPassword" TabIndex="1" />
        <Button Content="Login" HorizontalAlignment="Left" Margin="144,153,0,0" VerticalAlignment="Top" Width="75" Name="btnLogin" Click="btnLogin_Click" IsDefault="True" TabIndex="2" />

    </Grid>
</Window>
